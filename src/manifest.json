{
    "name": "GistFlow",
    "version": "0.1.0",
    "description": "Gist Flow is a web page summarizing tool for easier creation of notes and summaries.",
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/save.svg",
                "assets/edit.svg",
                "assets/delete.svg"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "assets/icon16.png",
            "32": "assets/icon32.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        },
        "default_title": "GistFlow",
        "default_popup": "popup.html"
    },
    "manifest_version": 3
}